<div>
  <form action="/gallery/{{id}}" method="post">
  <input type="hidden" name="_method" value="PUT">
  <label for="Author">Author</label>
  <input id="Author" type="text" name="Author" placeholder="Author of Picture">
  <br>
  <label for="description">Description</label>
  <input id = "description" type="text" name="description" placeholder="Description">
  <br>
  <label for="link">Link</label>
  <input id = "link" type="text" name="link" placeholder="Link">
  <br>
  <input type="submit" name="" value="Send">
</form>
</div>
<div class="error">
  <strong>{{error}}</strong>
</div>

<div>
  <div class="pictures">
    <strong>Author:{{Author}}</strong><br>
    <strong>Description:{{description}}</strong><br>
    <img src={{link}} />
  </div>
</div>
